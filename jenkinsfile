pipeline{
    agent any
    tools {
        maven 'Maven' 
    }

    stages{
        stage("maven test"){
            steps{
                sh ' mvn test '
            }
            
            }
              stage("maven build"){
            steps{
                sh ' mvn package '
            }
            
            }
                stage("docker image build"){
            steps{
                script{
                    sh ' docker build -t lakshit45/application . '
                }
            }
            
            }
                stage("docker image "){
            steps{
                script{
                    sh 'docker login -u lakshit45 -p jesuschrist@11 '
                    sh 'docker push lakshit45/application'
                }
            }
            
            }
                stage("deploy to test server"){
            steps{
                echo 'deploy to test server '
                input 'deploy to test server ?'
                deploy adapters: [tomcat9(credentialsId: 'tomcat9detail', path: '', url: 'http://192.168.1.64:8081/')], contextPath: '/testserver', war: '**/*.war'
            }
            
            }
              
              
        
    }
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}
